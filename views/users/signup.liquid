{% layout 'layout.liquid' %}
{% block content %}

<div class="container">
    <div class="grid grid-auto grid-3-sm mt-30">
        <div class="column">
        </div>
        <div class="column">
            <h1 class="align-center heading-mega mb-5">
                Sign Up
            </h1>
            <form class="form" action="/users/signup" method="POST">
                <div class="form-item centered align-center ">
                    <label> Username </label>
                    <input class="input align-center" type="text" placeholder="username" name="username">
                </div>
                <div class="form-item centered align-center">
                    <label> Password </label>
                    <input class="input align-center" type="password" placeholder="password" name="password">
                </div>
            <div class="align-center">
                <input 
                    type="submit" 
                    value="Create Account" 
                    class="button button-primary centered align-center"
                >
            </div>
            <div class="mt-5 align-center">
                Already Have an Account? 
                <a class="" href="/users/login">Login</a>
                </div>
                
            </form>
        </div> 
        <div class="column">
        </div> 
    
    </div>
</div>

{% endblock %}