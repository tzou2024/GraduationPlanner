{% layout 'layout.liquid' %}

{% block content %}
<div class="container centered edges mt-5">
    <h1 class="align-center heading-large mb-5">My Schedule</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <th></th>
            {%for i in (1..5)%}
            <th>Class {{i}} </th>
            {% endfor %}

        </thead>
    <tbody>
        {% for semester in classes %}
                <tr>
                    <td class="align-center"><b>Sem {{forloop.index}}:</b></td>
                    {% for j in (0..4)%}
                        <td class="align-center">
                            {% if semester[j].name %}
                            <b><a href="/catalogue/{{semester[j]._id}}">{{semester[j].name}}</a></b>
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
            
            
        {% endfor%}
    </tbody>
    </table> 
<div class="container centered edges mt-5">
    <div class="mt-3 mb-5 align-center">
        <a class="button" href="/catalogue/new">Create Class</a>
        <a class="button button-primary" href="/catalogue/search">Choose Class</a>
    </div>
</div>
{% endblock %}