{% layout 'layout.liquid' %}

{% block content %}
<div class="container centered edges mt-5">
    <h1 class="align-center heading-large mb-5">My Schedule</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <th></th>
            {%for i in (1..5)%}
            <th class="align-center">Class {{i}} </th>
            {% endfor %}

        </thead>
    <tbody>
        {% for semester in classes %}
                <tr>
                    <td class="align-center"><b>Sem {{forloop.index}}:</b></td>
                    {% for j in (0..4)%}
                         
                        <td class="align-center p-1 px-0">
                            <b><a class="text-large" href="/catalogue/{{semester[j]._id}}">{{semester[j].name}}</a></b>   
                            
                            <div class="flex flex-around">
                            {% if semester[j].name %}

                            <form action="/schedule/{{semester[j]._id}}?_method=DELETE" method="POST" class="hide-submit">
                                <label class="icon-text">
                                  <input type="submit" />
                                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                  </svg>
                                </label>
                              </form>
                                                   
                            <a class="align-center" href="#">
                                <span class="icon-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                      </svg>
                                </span>
                            </a>
                            </div>
                        
                            {% endif %}

                        </td>
                    {% endfor %}
                </tr>
            
            
        {% endfor%}
    </tbody>
    </table> 
<div class="container centered edges mt-5">
    <div class="mt-3 mb-5 align-center">
        <a class="button button-primary" href="/catalogue/search">Search Class</a>
    </div>
</div>
{% endblock %}