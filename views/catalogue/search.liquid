{% layout 'layout.liquid' %}
{% block content %}

<div class="container centered edges">
    <div class="grid grid-auto grid-3-sm mt-5">
        <div class="column">
        </div>
        <div class="column">
            <h1 class="align-center heading-large mb-5">
                Search a Class
            </h1>
            <form class="form" action="/catalogue/search" method="POST">
                <div class="form-item align-center mt-5">
                <select class="input align-center" name="searchcat">
                {% for i in keys%}
                    <option value="{{i}}">{{i}}</option>
                {% endfor %}
                </select>
                </div>
                <div class="form-item align-center mt-5">
                    <input type="search" class="input input-small input-round align-center" name="searchterm"placeholder="Search..." />
                    {% comment %} <input type="text" class="input align-center" name="searchterm"> {% endcomment %}
                </div>
                
               
                <div class="align-center mt-5">
                    
                <input 
                    type="submit" 
                    value="Search Class" 
                    class="button button-primary centered align-center"
                >
                    
                </div>
                <div class="mt-3 align-center">
                <a class="" href="/schedule">Back to Schedule</a>
                </div>
                
            </form>
        </div> 
        <div class="column">
        </div> 
    
    </div>
</div>

{% endblock %}