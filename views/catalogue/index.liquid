{% layout 'layout.liquid' %}

{% block content %}
<div class="container centered edges mt-5">
    <h1 class="align-center heading-large mb-5">Course Catalogue</h1>
    <div class="grid">
        {% for cls in classes %}
            <div class="column column-3 card p-5 shadow-150 bg-light radius-base">
                <div class="card-head align-center">
                    <h2 type="input" name="classname" value="{{cls.name}}"class="form-item heading-medium">
                        {{cls.name}}
                    </h2>
                </div>
                <div class="card-body align-center mt-3">
                    <div>
                    <p class="text-large">{{cls.credit_and_category |split: "," | join: "\n"}}</p>
                    </div>
                </div>
                <div class="mt-3 mb-1 align-center">
                    <div>
                    <a class="button m-3" href="/catalogue/{{cls._id}}">View</a>
                    </div>
                    <div class="mt-3">
                    <form action="/catalogue/{{cls._id}}?_method=DELETE" method="POST">
                    <input class="button button-primary m-3" type="submit" value="Delete">
                    </form>
                    </div>
                </div>
            </div>
        {% endfor%}
    </div>
<div class="container centered edges mt-5">
    <div class="mt-3 mb-5 align-center">
        <a class="button" href="/catalogue/new">Create Class</a>
        <a class="button button-primary" href="/catalogue/search">Choose Class</a>
    </div>
</div>
{% endblock %}